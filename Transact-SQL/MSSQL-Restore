USE [DB_NAME]
ALTER DATABASE [DB_NAME] SET SINGLE_USER WITH ROLLBACK IMMEDIATE;
RESTORE DATABASE [DB_NAME] FROM  DISK = N'C:\<DB-FILE-NAME>.bak' WITH  FILE = 1,  MOVE N'xxxAPP' TO N'C:\Program Files\Microsoft SQL Server\MSSQL<number>.MSSQLSERVER\MSSQL\DATA\DB_NAME.mdf',  MOVE N'xxxApp_log' TO N'C:\Program Files\Microsoft SQL Server\MSSQL<number>.MSSQLSERVER\MSSQL\DATA\DB_NAME_log.ldf',  NOUNLOAD,  STATS = 5
ALTER DATABASE [DB_NAME] SET MULTI_USER;
GO

USE [DB_NAME]
ALTER ROLE db_owner ADD MEMBER DB_USER1;
ALTER ROLE db_owner ADD MEMBER DB_USER2;
GO

-- in the case where the user is orphaned, meaning it appears in the DB but not in the security-logins use this:
-- alter user DB_USER with login = DB_USER